%h1 All users

= will_paginate
%br
%ul.users
  - @users.each do |user|
    %li
      = gravatar_for user, :size => 30
      = link_to user.name, user
      - if current_user.admin?
        = link_to " | delete", user, :method => :delete,
                                     :confirm => "Are you sure?",
                                     :title => "Delete #{user.name}"

= will_paginate